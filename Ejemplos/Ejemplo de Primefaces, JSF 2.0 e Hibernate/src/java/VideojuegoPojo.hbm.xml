<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="VideojuegoPojo" table="juegos">
    <!-- Hibernate genera mediante hilo una clave de 4 bytes de
        tipo entero que es la primary key de juegos. -->
    <id access="field" column="id" name="id" type="java.lang.Integer">
      <generator class="org.hibernate.id.TableHiLoGenerator">
        <param name="table">jid</param>
        <param name="column">next</param>
      </generator>
    </id>
    <!-- Un juego debe tener un nombre, de 30 caracteres a lo sumo. -->
    <property access="field" name="nombre" type="java.lang.String">
      <column length="30" name="nombre" not-null="true"/>
    </property>
    <property access="field" name="ruta" type="java.lang.String">
      <column name="ruta"/>
    </property>
    <property access="field" name="sinapsis" type="java.lang.String">
      <column name="sinapsis"/>
    </property>
    <property access="field" name="precio" type="java.lang.Float">
      <column name="precio"/>
    </property>
  </class>
</hibernate-mapping>
